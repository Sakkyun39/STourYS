    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const homeView = document.getElementById('home-view');
            const pageView = document.getElementById('page-view');
            const pageContent = document.getElementById('page-content');
            const navCards = document.querySelectorAll('.nav-card');
            const backButton = document.getElementById('back-button');
            const logoContainer = document.getElementById('logo-container');
            const menuButton = document.getElementById('menu-button');
            const dropdownMenu = document.getElementById('dropdown-menu');
            const dropdownItems = document.querySelectorAll('.dropdown-item');

            const embedContent = (iframeHtml) => {
                const styledIframe = iframeHtml.replace('<iframe', '<iframe class="w-full h-full border-0 rounded-lg"');
                return `<div class="h-[70vh] md:h-[80vh] bg-gray-900/50 rounded-lg overflow-hidden flex justify-center items-center">${styledIframe}</div>`;
            };

            const pages = {
                'schedule': {
                    title: '<img src="https://lh3.googleusercontent.com/d/13CREysegnBKP9VHSY8pJZtrqYSe3EagP" class="inline-block w-12 h-12 mr-3 transform scale-120">SCHEDULE',
                    subtitle: 'サークル年間スケジュール',
                    /* --- MODIFIED: スプレッドシートUI非表示 --- */
                    content: embedContent('<iframe src="https://docs.google.com/spreadsheets/d/e/2PACX-1vQa6oJPP-eDk2vHK6D33G5tdBgnFxBEBYQtgNyRhSupWzQ8A82vJvLaR1GM02LDZE3VpovyKkW8Ta9X/pubhtml?widget=true&amp;headers=false&amp;rm=minimal"></iframe>')
                },
                'live-info': {
                    title: '<img src="https://lh3.googleusercontent.com/d/1A4xvFPCur4U6CPgFWSVRrJDwQ3k1uRds" class="inline-block w-12 h-12 mr-3 transform scale-120">LIVE / EVENT',
                    subtitle: 'ライブやイベントの最新情報',
                    /* --- MODIFIED: スプレッドシートUI非表示 --- */
                    content: embedContent('<iframe src="https://docs.google.com/spreadsheets/d/e/2PACX-1vSL65RwxxokqV3qIdRHtOBDc_QHUTlFVS3D8dhuK6FmlC_xuLuq00dyY7l9lqjhoVC7pR6k_TjQrkT6/pubhtml?widget=true&amp;headers=false&amp;rm=minimal"></iframe>')
                },
                'entry': {
                    title: '<img src="https://lh3.googleusercontent.com/d/1VaI6hE2x7lI6PHcaq8wXJK0biPTkLsbW" class="inline-block w-12 h-12 mr-3 transform scale-120">LIVE ENTRY',
                    subtitle: 'ライブ出演エントリーはこちら',
                    /* --- MODIFIED: スプレッドシートUI非表示 --- */
                    content: embedContent('<iframe src="https://docs.google.com/spreadsheets/d/e/2PACX-1vTe3uhKoXAzc3AnMH7EOhtY1OgkHP12zeZAcHOPbmWMQXNGEAaddYAqf7zds0K_4y3VSr-MNFUQiuKN/pubhtml?widget=true&amp;headers=false&amp;rm=minimal"></iframe>')
                },
                'event-participation': {
                    title: '<img src="https://lh3.googleusercontent.com/d/1qkWejxm9-2aKcKg_eGt45NVD_7fVdAtW" class="inline-block w-12 h-12 mr-3 transform scale-120">EVENT ENTRY',
                    subtitle: 'イベント参加はこちら',
                    /* --- MODIFIED: スプレッドシートUI非表示 --- */
                    content: embedContent('<iframe src="https://docs.google.com/spreadsheets/d/e/2PACX-1vTDeC92tP6HF4VPPzMLc5QI90eZhOycGazrtO_N3L95GVIXTLf7Na6wQOuDpHaezDKlprGFhh40lF8k/pubhtml?widget=true&amp;headers=false&amp;rm=minimal"></iframe>')
                },
                'staff': {
                    title: '<img src="https://lh3.googleusercontent.com/d/1xkUhIzJd0xfV6QSr_Y9Ff_X8DDYUdwcD" class="inline-block w-12 h-12 mr-3 transform scale-120">LEADERS',
                    subtitle: 'サークル代表・運営体制',
                    /* --- MODIFIED: スプレッドシートUI非表示 --- */
                    content: embedContent('<iframe src="https://docs.google.com/spreadsheets/d/e/2PACX-1vRauh4Dh-FhCijgsSBWp-U7oc_Gnunc0f1Co41ozE1KQr1DExTwRczmqobyXO8-Uaye9qrSwmHt2p33/pubhtml?widget=true&amp;headers=false&amp;rm=minimal"></iframe>')
                },
                'other': {
                    title: '<img src="https://lh3.googleusercontent.com/d/1b4uL4vGzoeIkOTuLC7tl090hf5coyskx" class="inline-block w-12 h-12 mr-3 transform scale-120">OTHERS',
                    subtitle: 'その他連絡事項',
                    /* --- MODIFIED: スプレッドシートUI非表示 --- */
                    content: embedContent('<iframe src="https://docs.google.com/spreadsheets/d/e/2PACX-1vQ5Z4koaa0EuHC6Pjt15zxlxlnrqKsxlw31lTlSSGEOxRMrPT24EUpDBonUpnhoNBlWVGpV5ld6W1JS/pubhtml?widget=true&amp;headers=false&amp;rm=minimal"></iframe>')
                }
            };

            // --- URLハッシュベースのルーティング実装 ---

            // ページ表示処理 (View)
            function renderPage(pageId) {
                if (pageId && pages[pageId]) {
                    // サブページ表示
                    pageContent.innerHTML = `
                        <h2 class="text-3xl md:text-4xl font-black font-oswald mb-2 text-orange-500 tracking-wider flex items-center">${pages[pageId].title}</h2>
                        <p class="text-white font-bold mb-6 text-base md:text-lg subtitle-marker">${pages[pageId].subtitle}</p>
                        ${pages[pageId].content}
                    `;
                    homeView.classList.add('hidden');
                    pageView.classList.remove('hidden');
                    window.scrollTo(0, 0);
                } else {
                    // トップページ表示
                    pageView.classList.add('hidden');
                    homeView.classList.remove('hidden');
                    window.scrollTo(0, 0);
                }
            }

            // ハッシュ変更時のイベントハンドラ (Route)
            window.addEventListener('hashchange', () => {
                const pageId = window.location.hash.substring(1); // #を除去
                renderPage(pageId);
            });

            // ページ遷移関数 (Navigate) - ハッシュを更新して履歴に残す
            const navigate = (targetPage) => {
                window.location.hash = targetPage;
                dropdownMenu.classList.add('hidden');
            };

            // ホームへ戻る関数 (Home) - ハッシュをクリアする
            const showHome = () => {
                // 履歴を残しつつハッシュをクリア
                // NOTE: pushStateだけではhashchangeが発火しないため、手動でrenderPageを呼ぶか、空ハッシュを代入する
                // 互換性のため window.location.hash = '' を使用しても良いが、#が残る場合があるため pushState推奨
                history.pushState(null, null, ' '); 
                renderPage(''); // ビュー更新
                dropdownMenu.classList.add('hidden');
            };

            // --- イベントリスナー設定 ---

            navCards.forEach(card => {
                card.addEventListener('click', () => navigate(card.getAttribute('data-target')));
            });

            dropdownItems.forEach(item => {
                item.addEventListener('click', (e) => {
                    e.preventDefault();
                    navigate(item.getAttribute('data-target'));
                });
            });

            backButton.addEventListener('click', showHome);
            logoContainer.addEventListener('click', showHome);
            
            menuButton.addEventListener('click', (e) => {
                e.stopPropagation();
                dropdownMenu.classList.toggle('hidden');
            });
            
            window.addEventListener('click', () => {
                if (!dropdownMenu.classList.contains('hidden')) {
                    dropdownMenu.classList.add('hidden');
                }
            });

            // --- 初期ロード時の処理 ---
            // ページ読み込み時にURLハッシュを確認して該当ページを開く
            const initialHash = window.location.hash.substring(1);
            if (initialHash) {
                renderPage(initialHash);
            }
        });
    </script>
</body>
</html>
